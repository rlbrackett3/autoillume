= form_for(@post) do |f|
  = f.error_messages
  %p.field
    = f.label :title
    %br
    = f.text_field :title
    %br
    %section.add_photo
      Add a Photo.
      = f.fields_for :photo_sections do |photo_section|
        = photo_section.fields_for :photo do |photo|
          %p.field
            = photo.label :image
            %br
            = photo.file_field :image
            = photo.hidden_field :image_cache
            %p.field
            = photo.label :title
            %br
            = photo.text_field :title
    %br
    %section.add_text
      Add a Text Section.
      = f.fields_for :text_sections do |text_section|
        %p.field
          = text_section.label :body
          %br
          = text_section.text_area :body
  %p.field
    = f.label :published_at
    %br
    = f.datetime_select :published_at
  %p.field
    = f.label :state
    %br
    = f.collection_select :state, @post.state_transitions, :event, :human_to_name#, include_blank: @post.human_state_name
  %p.actions
    = f.submit