%h1 Listing pages
%table
  %tr
    %th Title
    %th Permalink
    %th Content
    %th
    %th
    %th
  - @pages.each do |page|
    %tr
      %td= page.title
      %td= page.permalink
      %td= page.content
      %td= link_to 'Show', page_path(page)
      - if admin_logged_in?
        %td= link_to 'Edit', edit_page_path(page)
        %td= link_to 'Destroy', page, confirm: 'Are you sure?', method: :delete
- if admin_logged_in?
  %br/
  = link_to 'New Page', new_page_path