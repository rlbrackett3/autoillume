= form_for @external_link, validate: true do |f|
  -if @external_link.errors.any?
    #error_explanation
      %h2= "#{pluralize(@external_link.errors.count, "error")} prohibited this external_link from being saved:"
      %ul
        - @external_link.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
